@model IEnumerable<ProductDTO>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<h2 class="my-4">Ürün Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ürün No</th>
            <th>Ürün Adı </th>
            <th>Alış Fiyatı</th>
            <th>Satış Fiyatı</th>
            <th>Stok</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.PurchasePrice</td>
                <td>@product.SalePrice</td>
                <td>@product.Stock</td>
                <td><img src="@product.ImagePath" alt="Ürün Image" width="100" /></td>
                <td>
                    <a href="/Product/UpdateProduct?id=@product.Id" class="btn btn-primary">Güncelle</a>
                    <a href="/Product/DeleteProduct?id=@product.Id" class="btn btn-primary">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>